    print(banner)

def print_usage():
    """Print usage information"""
    usage = """
ğŸ“– USAGE:
    python agent.py console  â†’ Terminal-based voice (pure console)
    python agent.py dev      â†’ Browser-based voice (web UI)

ğŸ’¡ EXAMPLES:
    python agent.py console  # Talk directly in terminal
    python agent.py dev      # Open browser with mic button

ğŸ“‹ REQUIREMENTS:
    1. Ollama must be running: ollama serve
    2. Model must be pulled: ollama pull gemma2:2b
    3. PyAudio installed (for console mode)

ğŸ”§ MODES EXPLAINED:
    CONSOLE: Direct microphone â†’ no browser needed
             Press Ctrl+C when done speaking
             Sofia responds through speakers

    BROWSER: Opens Gradio web UI automatically
             Click microphone button to talk
             Full real-time voice interaction
"""
    print(usage)

def check_ollama():
    """Check if Ollama is running and model is available"""
    try:
        import ollama

        # Try to list models
        response = ollama.list()
        logger.success("âœ… Ollama is running")

        # Check if recommended model exists
        model_names = [m.model for m in response.models]

        if any('gemma2:2b' in name for name in model_names):
            logger.success("âœ… gemma2:2b model found")
        elif any('gemma3:4b' in name for name in model_names):
            logger.success("âœ… gemma3:4b model found (will use this)")
        elif model_names:
            logger.warning(f"âš ï¸  Recommended model not found")
            logger.info(f"   Available models: {', '.join(model_names[:3])}")
            logger.info("   Will use first available model")
        else:
            logger.error("âŒ No models found. Install: ollama pull gemma2:2b")
            return False

        return True

    except Exception as e:
        logger.error(f"âŒ Ollama error: {e}")
        print("\nğŸ”§ How to fix:")
        print("   1. Install Ollama: https://ollama.com")
        print("   2. Start Ollama: ollama serve")
        print("   3. Pull model: ollama pull gemma2:2b")
        print()
        return False

def main():
    """Main entry point"""
    # Clear screen
    os.system('clear' if os.name != 'nt' else 'cls')

    print_banner()

    # Check arguments
    if len(sys.argv) < 2:
        logger.error("âŒ ERROR: Mode not specified")
        print_usage()
        sys.exit(1)

    mode = sys.argv[1].lower()

    # Validate mode
    if mode not in ["console", "dev"]:
        logger.error(f"âŒ ERROR: Invalid mode '{mode}'")
        print_usage()
        sys.exit(1)

    # Check Ollama
    if not check_ollama():
        sys.exit(1)

    logger.info(f"ğŸš€ Starting Sofia in {mode.upper()} mode...")

    try:
        if mode == "console":
            # Console mode - Pure terminal voice
            logger.info("Initializing console voice handler...")
            handler = ConsoleVoiceHandler(llm_model="gemma2:2b")
            handler.run_conversation(system_prompt=AGENT_INSTRUCTION)
            handler.cleanup()

        elif mode == "dev":
            # Browser mode - Web UI
            logger.info("Initializing browser voice handler...")
            handler = BrowserVoiceHandler(
                llm_model="gemma2:2b",
                system_prompt=AGENT_INSTRUCTION
            )
            handler.launch(share=False)  # Set share=True for public URL
            handler.cleanup()

    except KeyboardInterrupt:
        print("\n\nğŸ‘‹ Goodbye!")
        sys.exit(0)
    except Exception as e:
        logger.error(f"âŒ Error: {e}")
        sys.exit(1)

if __name__ == "__main__":
    main()